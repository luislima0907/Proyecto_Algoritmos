#:import hex kivy.utils.get_color_from_hex

<SigninWindow>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: hex('#000000')
		Rectangle:
			size: self.size
			pos: self.pos
	BoxLayout:
		size_hint_y: .05
	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#4D6E78')
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint_y: .9
		Label:
			size_hint_x: .3
		BoxLayout:
			size_hint_x: .4
			orientation: 'vertical'
			Label: 
				size_hint_y: .40
				text: 'Bienvenido a la Base de Datos\nDe Tienda Rosita'
				halign: 'center'
				font_size: '40sp'
				color: hex('#FFFFFF')
			Label:
				id: signin_notificacion
				size_hint_y: .15
				color: (1, .2, .2, 1)
			TextInput:
				id: username
				size_hint_y: .1
				hint_text: 'Nombre de Usuario'
				multiline: False
				write_tab: False
				on_text_validate: root.verificar_usuario(self.text, password.text)
			TextInput:
				id: password
				size_hint_y: .1
				hint_text: 'Contrase√±a'
				multiline: False
				write_tab: False
				password: True
				on_text_validate: root.verificar_usuario(username.text, self.text)
			Button:
				size_hint_y: .1
				background_normal: ''
				background_color: hex('#393939')
				text: 'Ingresar'
				on_release: root.verificar_usuario(username.text, password.text)
			Label:
				size_hint_y: .4
		Label:
			size_hint_x: .3
	BoxLayout:
		size_hint_y: .05


